// typescript-utcp/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@utcp/core": ["packages/core/src"],
      "@utcp/core/*": ["packages/core/src/*"],
      "@utcp/http": ["packages/http/src"],
      "@utcp/http/*": ["packages/http/src/*"],
      "@utcp/mcp": ["packages/mcp/src"],
      "@utcp/mcp/*": ["packages/mcp/src/*"],
      "@utcp/text": ["packages/text/src"],
      "@utcp/text/*": ["packages/text/src/*"],
      "@utcp/cli": ["packages/cli/src"],
      "@utcp/cli/*": ["packages/cli/src/*"],

    },
    "outDir": "dist",
    "composite": true,
    "allowSyntheticDefaultImports": true 
  },
  "include": [
    "packages/**/src/**/*",
    "packages/**/tests/**/*",
    "examples/**/*", 
    "tests/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/http" },
    { "path": "./packages/mcp" },
    { "path": "./packages/text" },
    { "path": "./packages/cli" }
  ]
}